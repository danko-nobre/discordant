{
    "compilerOptions": {
        "target": "ES2024",
        "module": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "esModuleInterop": true,
        "declaration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "nodenext",
        "baseUrl": ".",
        "paths": {
            "@app/*": [
                "./app/*"
            ]
        }
    },
    "include": [
        "app/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
